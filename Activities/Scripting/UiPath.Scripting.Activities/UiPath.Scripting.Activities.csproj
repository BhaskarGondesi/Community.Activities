<Project Sdk="Microsoft.NET.Sdk" ToolsVersion="Current">
	<Import Project="..\Scripting.build.props" />
	<PropertyGroup>
		<PackageId>.noconflict</PackageId>
		<TargetFrameworks>net6.0</TargetFrameworks>
		<OutputPath>..\..\Output\Activities\Scripting\</OutputPath>
	</PropertyGroup>
	<ItemGroup Condition=" '$(TargetFramework)' == 'net6.0' ">
		<PackageReference Include="System.Activities" />
		<PackageReference Include="UiPath.Workflow" />
		<PackageReference Include="System.Activities.ViewModels" />
		<PackageReference Include="System.Activities.Metadata" />
		<PackageReference Include="UiPath.Activities.Api" />
		<PackageReference Include="UiPath.Activities.Contracts" />
		<PackageReference Include="UiPath.Platform" />
		<PackageReference Include="System.Management.Automation" />
	</ItemGroup>
	<ItemGroup>
		<ProjectReference Include="..\UiPath.Scripting\UiPath.Scripting.csproj">
			<Name>UiPath.Scripting</Name>
		</ProjectReference>
	</ItemGroup>
	<ItemGroup>
		<Compile Update="Properties\UiPath.Scripting.Activities.Designer.cs">
			<DesignTime>True</DesignTime>
			<AutoGen>True</AutoGen>
			<DependentUpon>UiPath.Scripting.Activities.resx</DependentUpon>
		</Compile>
	</ItemGroup>
	<ItemGroup>
		<EmbeddedResource Update="Properties\UiPath.Scripting.Activities.resx">
			<Generator>PublicResXFileCodeGenerator</Generator>
			<LastGenOutput>UiPath.Scripting.Activities.Designer.cs</LastGenOutput>
		</EmbeddedResource>
	</ItemGroup>
	<Import Project="..\..\Shared\UiPath.Shared.Activities\UiPath.Shared.Activities.projitems" Label="Shared" />
	<ItemGroup>
		<Compile Condition="'$(TargetFramework)' != 'net6.0'" Remove="NetCore/**" />
	</ItemGroup>
</Project>